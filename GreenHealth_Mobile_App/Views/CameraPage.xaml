<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GreenHealth_Mobile_App.CameraPage"
             BackgroundColor="White">
    <StackLayout VerticalOptions="Center">
        <Image x:Name="resultImage"/>
        <Button Text="Choose photo"
                Clicked="PickButton_Clicked"
                BackgroundColor="#81BB26" Margin="70,0,70,0"/>
        <Button Text="Make photo"
                Clicked="MakeButton_Clicked"
                BackgroundColor="#81BB26"  Margin="70,0,70,0"/>
        <Button x:Name="ConfirmButton"
                IsVisible="False"
                Text="Confirm"
                Clicked="ConfirmButton_Clicked"
                BackgroundColor="#81BB26"/>
    </StackLayout>
</ContentPage>