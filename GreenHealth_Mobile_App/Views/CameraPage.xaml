<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GreenHealth_Mobile_App.CameraPage"
             BackgroundColor="White">
    <StackLayout VerticalOptions="Center">
        <Image x:Name="resultImage"/>
        <Button Text="Kies foto"
                Clicked="PickButton_Clicked"
                BackgroundColor="#81BB26" Margin="120,0,120,0" TextColor="White" FontAttributes="Bold" />
        <Button Text="Maak foto"
                Clicked="MakeButton_Clicked"
                BackgroundColor="#81BB26"  Margin="120,0,120,0" TextColor="White" FontAttributes="Bold" />
        <Button x:Name="ConfirmButton"
                IsVisible="False"
                Text="Bevestig"
                Clicked="ConfirmButton_Clicked"
                BackgroundColor="#81BB26" TextColor="White"/>
        
    </StackLayout>
</ContentPage>